(
    TitleToken = 'SOLO_CAMP'
)

private TutorialListDescriptor is TemplateCampaignSoloWindowFrame
(
    TitleToken = 'TUTO_LIST'
)

private HistoricalBattlesListDescriptor is TemplateCampaignSoloWindowFrame
(
