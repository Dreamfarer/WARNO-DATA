)

private ChapterResumeContainer is BUCKContainerDescriptor
(
    ComponentFrame = TUIFramePropertyRTTI(
        RelativeWidthHeight = [0,1]
        MagnifiableWidthHeight = [550,0]
    )
    Components = []
)

template LockedScenarioComponent
[
    DLCTexture : string,
    TextureSize : float2
]
is BUCKContainerDescriptor
(
    ComponentFrame = TUIFramePropertyRTTI
    (
        RelativeWidthHeight = [1,1]
    )

    UniformDrawer = $/UserInterface/UIUniformDrawer
    HasBackground = true
    BackgroundBlockColorToken = "ScenarioDlc/Fond"

    Components =
    [
        // Composant le plus Ã  gauche : le verrou et indicateur "DLC"
        BUCKTextureDescriptor
        (
            ComponentFrame = TUIFramePropertyRTTI
            (
                MagnifiableWidthHeight = [36,36]
            )

            TextureToken = "OutgameTexture_Division_Dlc_Corner"
        ),
        // Texture de DLC
        BUCKTextureDescriptor
        (
            ElementName = "DLCTexture"
            ComponentFrame = TUIFramePropertyRTTI
            (
                MagnifiableWidthHeight = <TextureSize>
                AlignementToFather = [1,0.5]
                AlignementToAnchor = [1,0.5]
                MagnifiableOffset = [-15,0]
            )

            TextureToken = <DLCTexture>
        )
    ]
)

private MissionProgressionGauge is BUCKSimpleGaugeDescriptor
(
    ComponentFrame = TUIFramePropertyRTTI
    (
        MagnifiableWidthHeight = [120.0, 12.0]
        AlignementToAnchor = [0.5, 0.5]
        AlignementToFather = [0.5, 0.5]
    )

    GaugeMax = 100
    GaugeComponentName = 'GaugeProgression'

    HasBorder = true
    BorderThicknessToken = "1"
    BorderLineColorToken = "Fulda2_Orange100"

    Components =
    [
        BUCKSimpleGaugeValueDescriptor
        (
            ElementName = 'GaugeProgression'
            ComponentFrame = TUIFramePropertyRTTI
            (
                RelativeWidthHeight = [0.0, 1.0]
                AlignementToAnchor = [0.0, 0.5]
                AlignementToFather = [0.0, 0.5]
            )

            ValueContainerName = 'GaugeValue'
            ValueContainerComponent = BUCKContainerDescriptor
            (
                ElementName = 'GaugeValue'
                ComponentFrame = TUIFramePropertyRTTI
                (
                    RelativeWidthHeight = [0.0, 1.0]
                )

                HasBackground = true
                BackgroundBlockColorToken = "Fulda2_Orange100"
            )
        ),
    ]
)

