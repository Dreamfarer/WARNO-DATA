template AccountQuestionModalDescriptor
[
    TextToken : string
]
is WindowFrame
(
    ContentMagnifiableWidthHeight = [850.0, 328.0]
    TitleToken = 'T_ACCASK'

    ContentComponents =
    [
        BUCKTextDescriptor
        (
            ComponentFrame = TUIFramePropertyRTTI
            (
                RelativeWidthHeight = [1.0, 1.0]
