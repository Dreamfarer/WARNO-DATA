            BigLineAction = <BigLineAction>
            TextToken = <TextToken>
            TextDico = <TextDico>
            HorizontalFitStyle = ~/FitStyle/UserDefined
            VerticalFitStyle = ~/FitStyle/UserDefined

            TextColor = "Vert_loadOnglet"
            TextSize = "18"

            ChildFitToContent = true
        ),
    ]
)
