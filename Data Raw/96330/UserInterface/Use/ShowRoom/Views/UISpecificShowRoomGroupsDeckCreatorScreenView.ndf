        ),
        BUCKEditableTextDescriptor
        (
            ElementName = "CombatGroupsTabEditableText"
            ComponentFrame = TUIFramePropertyRTTI
            (
                MagnifiableWidthHeight = [140.0, 20.0]
                AlignementToFather  = [0.5, 1.0]
                AlignementToAnchor  = [0.5, 1.0]
