                ElementName = "SmartGroupsRackContainer"

                ComponentFrame = TUIFramePropertyRTTI
                (
                    RelativeWidthHeight = [1.0, 1.0]
                    MagnifiableWidthHeight = [<MarginSize> * -2.0, 0.0]
