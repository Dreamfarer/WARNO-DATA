                                AlignementToFather = [0.5, 0.0]
                            )
                        TextureToken = <TextureToken>
                        TextureColorToken = 'SM_renfort_fleche'
                    )
                ),
                BUCKListElementDescriptor
                (
                    ComponentDescriptor = BUCKTextureDescriptor
                    (
                        ComponentFrame = TUIFramePropertyRTTI
                        (
                                MagnifiableWidthHeight = [180.0, 44.0]
                        )
                        TextureFrame = TUIFramePropertyRTTI
                        (
                            MagnifiableWidthHeight = [170,44]
                            AlignementToAnchor = [0.5, 0.0]
                            AlignementToFather = [0.5, 0.0]
                        )
                        TextureToken = 'renfort_date'
                        TextureColorToken = <TextureColorToken>
                        Components =
                        [
                            BUCKTextDescriptor
                            (
                                ElementName = "TextElement"
                                ComponentFrame = TUIFramePropertyRTTI
                                (
                                    MagnifiableWidthHeight = [180,37]
                                    MagnifiableOffset = [0,8]
                                )

                                ParagraphStyle = TParagraphStyleRTTI
                                (
                                    Alignment = UIText_Center
                                    VerticalAlignment = UIText_VerticalCenter
                                    InterLine = 0
                                )

                                TextStyle = "Default"
