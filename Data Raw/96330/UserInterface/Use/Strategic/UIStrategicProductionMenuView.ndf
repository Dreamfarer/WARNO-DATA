                                TextColor = <TextColor>

                                Hint = BUCKSpecificHintableArea
                                (
                                    ElementName = "ButtonHintableArea"
                                    DicoToken = ~/LocalisationConstantes/dico_interface_ingame
                                    HintBodyToken = <HintBodyToken>
                                )
                            )
                        ]
                    )
                ),

            ]
        )

    ]
