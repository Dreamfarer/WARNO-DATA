    TextSize = "14"

    Components =
    [
        PanelRoundedCorner
        (
            BackgroundBlockColorToken = "Noir"
            BorderLineColorToken = "Gris_pi"
            Radius = 3
            BackgroundLocalRenderLayer = <LocalRenderLayer>
            BorderLocalRenderLayer = <LocalRenderLayer>
        )
    ]
)

