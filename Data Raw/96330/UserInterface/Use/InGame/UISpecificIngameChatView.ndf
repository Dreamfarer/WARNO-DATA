)

ChatParagraphStyleTopLeft is TParagraphStyleRTTI
(
    Alignment = UIText_Left
    VerticalAlignment = UIText_Up
    InterLine = 0
    BigWordAction = ~/BigWordAction/BigWordNewLine
)

