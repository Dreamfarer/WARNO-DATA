template RunAnimation [Tags] is TAnimationWithTags(
    Animation = TCompositeBipedAnimation(
        SubAnimations = [
            TBlendSpace2DBipedAnimation(
            IsLegCycle = true
            Front = FusilierRun
            Back = FusilierArriere
            Left = FusilierGauche
            Right = FusilierDroite
            InTransition = 1.0 OutTransition = 1.0
            ),
            TBlendSpace2DBipedAnimation(
                IsLegCycle = true
                Front = FusilierRun2
                Back = FusilierArriere
                Left = FusilierGauche
                Right = FusilierDroite
            InTransition = 1.0 OutTransition = 1.0
            ),
            TBlendSpace2DBipedAnimation(
                IsLegCycle = true
                Front = FusilierRun3
                Back = FusilierArriere
                Left = FusilierGauche
                Right = FusilierDroite
            InTransition = 1.0 OutTransition = 1.0
            ),
        ]
    )
    Tags = <Tags>
)

template DepictionOperator_SkeletalAnimation2_Default [ConditionalTags = [] ] is TCosmeticSkeletalAnimation2OperatorDesc
(
    // r√©glage de l'animation de transition :
    // SwappingDuration donne la dur√©e de la pr√©sente du tag de swap, sachant que les infos gameplay auront toujours la prio
    // On ne dispose que du temps de vis√©e pour swapper l'arme, donc si le temps de vis√©e est + court que le temps de swap, l'animation va glitch
    SwappingDuration = 1.0

    ConditionalTags = <ConditionalTags>
    Animations = [
        RunAnimation( Tags = ['run'] ),
        RunAnimation( Tags = ['mmg','run'] ),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierMarche IsLegCycle = true InTransition = 1.0 OutTransition = 0.3 ) Tags = ['walk']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierMarche IsLegCycle = true InTransition = 1.0 OutTransition = 0.3 ) Tags = ['mmg','walk']),
        TAnimationWithTags( Animation = TAlternativeBipedAnimation( Resources = [FusilierCrouch, FusilierCrouch2, FusilierIdle, FusilierIdle2] IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) Tags = ['stand']),
        TAnimationWithTags( Animation = TAlternativeBipedAnimation( Resources = [FusilierIdleMMG, FusilierIdleMMG2] IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) Tags = ['mmg', 'stand']),
        TAnimationWithTags( Animation = TAlternativeBipedAnimation( Resources = [FusilierIdleGrenade] IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) Tags = ['grenade', 'stand']),
        TAnimationWithTags( Animation = TAlternativeBipedAnimation( Resources = [FusilierMortBalle, FusilierMortBalle2, FusilierMortBalle3, FusilierMortBalle4, FusilierMortBalle5] IsLegCycle = false InTransition = 2.0 OutTransition = 1.0) Tags = ['dead', 'stand']),
        // TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierMortBalle IsLegCycle = false InTransition = 2.0 OutTransition = 1.0) Tags = ['dead', 'stand']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierAiming IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) TorsoOnly = true Tags = ['aiming']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierBazookaTransition1 IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) TorsoOnly = true Tags = ['swapping']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierFire IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) TorsoOnly = true PlayTillEnd = true Tags = ['aiming', 'shoot']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierAimingMMG IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) TorsoOnly = true Tags = ['aiming', 'mmg']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierFireMMG IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) PlayTillEnd = true TorsoOnly = true Tags = ['aiming', 'shoot', 'mmg']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierBazookaVise IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) TorsoOnly = true Tags = ['aiming', 'bazooka']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierBazookaTir IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) PlayTillEnd = true Tags = ['aiming', 'shoot', 'bazooka']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierAimingGrenade IsLegCycle = false InTransition = 0.5 OutTransition = 0.5) TorsoOnly = true Tags = ['aiming', 'grenade']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierFireGrenade IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) PlayTillEnd = true Tags = ['aiming', 'shoot', 'grenade']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierHit IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) TorsoOnly = true PlayTillEnd = true Tags = ['aiming', 'hit']),
        TAnimationWithTags( Animation = TSimpleBipedAnimation( Resource = FusilierHitExplosion IsLegCycle = false InTransition = 0.0 OutTransition = 0.5) TorsoOnly = true PlayTillEnd = true Tags = ['aiming', 'explosion', 'hit']),
    ]

    UpperBodyBones = UpperBodyBoneList

    DebugAnimations = [FusilierAiming,FusilierAimingFlamer, FusilierAimingMMG, FusilierAimingSMG,
     FusilierBazookaTir, FusilierBazookaTransition1, FusilierBazookaTransition2, FusilierBazookaVise,
     FusilierArriere, FusilierDroite, FusilierGauche,FusilierCrawl, FusilierCrouch, FusilierCrouch2,
     FusilierDeroute, FusilierDeroute2, FusilierDeroute3, FusilierEau, FusilierFire,
     FusilierFireFlamer, FusilierFireMMG, FusilierFireSMG, FusilierGetUp,
     FusilierHit, FusilierHitDos, FusilierHitExplosion, FusilierIdle,
     FusilierIdleMMG, FusilierIdleMMG2, FusilierIdleSMG, FusilierIdleSMG2, FusilierIdleSpecial, FusilierIdle2,
