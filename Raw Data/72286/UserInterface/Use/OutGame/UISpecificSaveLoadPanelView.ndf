    TitleDescriptor = SaveLoadMultiListTitle
    (
        Category = <Category>
        IsReplay = <IsReplay>
    )
    ContentDescriptor = SaveLoadScrollingContainer
    (
        Category = <Category>
        IsReplay = <IsReplay>
    )
)

